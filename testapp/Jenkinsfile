
Pipeline {
	agent any
    triggers {
        cron('* * * * *')
    }
	Stages {
		stage('build') {
			steps {
				script {
                    echo 'build the job'
                    }  
				}
			}
		stage('script') {
			steps {
				script {
                    echo 'script triggered manually'
                    }   
				}
			}
		stage('script') {
		when {
            triggeredBy 'TimerTrigger'
			steps {
				script {
                    echo 'script triggered manually'
                    }  
				}
			}
        }
    } 
}          		
