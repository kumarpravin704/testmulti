pipeline {
	agent any
/*   triggers {
        cron('*/5 * * * *')
    } */
	stages {
		stage('build') {
			when {
            triggeredBy 'User'
            } 
			steps {
				
                    echo 'build the job'
                
			}
		}
		stage('script') {
			when {
            triggeredBy 'User'
            } 
			steps {
				
                    echo 'script triggered manually'
                  
			}
		}
		stage('timerscript') {
		when {
            triggeredBy 'TimerTrigger'
            } 
			steps {
				
                    echo 'Timmer triggered the script'
                
			}
		}
    }
}
