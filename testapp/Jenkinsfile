pipeline {
	agent any
 /*   triggers {
        cron('* * * * *')
    } */
	stages {
		stage('build') {
			steps {
				
                    echo 'build the job'
                
			}
		}
		stage('script') {
			steps {
				
                    echo 'script triggered manually'
                  
			}
		}
		stage('timerscript') {
		when {
            triggeredBy 'TimerTrigger'
            } 
			steps {
				
                    echo 'script triggered manually'
                
			}
		}
    }
}
